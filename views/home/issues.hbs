<style>
.inline {
  display: inline-block;
  margin: 1em 1em 1em 0
}
</style>
{{#each issues }}
<div class="inline">
  <div class="card" style="width: 32rem;">
  <div class="card-body">
    <h5 class="card-title">{{this.title}}</h5>
    <h6 class="card-subtitle mb-2 text-muted">{{this.user}}</h6>
    <p class="card-text">{{this.body}}</p>
    <a href="{{this.url}}">{{this.url}}</a>
    <p><span class="font-weight-bold">Comments:</span> {{this.comments}}</p>
    <p><span class="font-weight-bold">Created at:</span> {{this.created}}</p>
    <p><span class="font-weight-bold">Last Updated:</span> {{this.updated}}</p>
    <a href="#" class="card-link">Comment</a>
    <a href="#" class="card-link">Delete Issue</a>
  </div>
</div>
</div>
{{/each}}
